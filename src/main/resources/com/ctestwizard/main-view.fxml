<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ctestwizard.controller.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <SplitPane dividerPositions="0.8" orientation="VERTICAL">
        <items>
          <SplitPane dividerPositions="0.25" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0">
            <items>
                  <VBox fx:id="MasterBox" alignment="TOP_CENTER">
                     <children>
                        <ListView fx:id="TestObjectList" onMouseClicked="#handleTObjectClick" />
                        <Button fx:id="ExecuteTestObjectBtn" mnemonicParsing="false" onAction="#handleExecuteTestObject" text="Execute Test Object" />
                        <ListView fx:id="TestCaseList" onMouseClicked="#handleTCaseClick" />
                        <Button fx:id="NewTestCaseBtn" mnemonicParsing="false" onAction="#handleCreateNewTestCase" text="New Test Case" />
                        <Button fx:id="NewTestStepBtn" mnemonicParsing="false" onAction="#handleNewTestStep" text="New Test Step" />
                     </children>
                  </VBox>
                  <TabPane fx:id="MainPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="Interface Editor">
                           <content>
                              <VBox fx:id="InterfaceBox">
                                 <children>
                                    <ButtonBar prefHeight="40.0" prefWidth="200.0">
                                      <buttons>
                                        <Button fx:id="NewUserGlobalBtn" mnemonicParsing="false" onAction="#handleNewUserGlobal" opacity="0.0" text="New User Global" />
                                      </buttons>
                                    </ButtonBar>
                                 </children></VBox>
                           </content>
                      </Tab>
                      <Tab text="Data Editor">
                           <content>
                              <VBox fx:id="TestDataBox" />
                           </content>
                      </Tab>
                        <Tab text="Stub Editor">
                           <content>
                              <SplitPane dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0">
                                 <items>
                                    <ListView fx:id="StubCodeList" prefHeight="200.0" prefWidth="200.0" />
                                    <VBox fx:id="StubCodeBox" alignment="TOP_CENTER" />
                                 </items>
                              </SplitPane>
                           </content>
                        </Tab>
                        <Tab text="Test Environment Editor">
                           <content>
                              <VBox fx:id="TestEnvironmentBox" prefHeight="200.0" prefWidth="100.0" />
                           </content>
                        </Tab>
                    </tabs>
                  </TabPane>
            </items>
          </SplitPane>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Console">
                     <content>
                        <TextArea fx:id="Console" prefHeight="200.0" prefWidth="200.0" />
                     </content>
                </Tab>
                <Tab text="Test Case Definition" />
              </tabs>
            </TabPane>
        </items>
      </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="MemoryUsed" maxWidth="-1.0" HBox.hgrow="NEVER">
               <font>
            <Font size="11.0" fx:id="x3" />
               </font>
               <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
               </textFill></Label>
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
