<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane prefHeight="370.0" prefWidth="447.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ctestwizard.controller.TestExecutionSettingsController">
   <tabs>
      <Tab text="Defines">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="DefinesList" />
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#createDefine" text="Create Define" />
                        <Button mnemonicParsing="false" onAction="#removeSelectedDefine" text="Remove Selected Define" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="Linker">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="LinkerList" />
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addLinker" text="Add New Linker File" />
                        <Button mnemonicParsing="false" onAction="#removeSelectedLinker" text="Remove Selected Linker" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="Include">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ListView fx:id="IncludeList" />
                  <HBox alignment="CENTER" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addIncludeDirectory" text="Add Include Directory" />
                        <Button mnemonicParsing="false" onAction="#removeSelectedDirectory" text="Remove Selected Directory" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </Tab>
      <Tab text="Properties">
         <content>
            <VBox fx:id="TestEnvironmentBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="PropertyTable">
                     <columns>
                        <TableColumn prefWidth="75.0" text="Property" />
                        <TableColumn prefWidth="75.0" text="Value" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <CheckBox fx:id="CodeCoverageEnabled" mnemonicParsing="false" text="Enable Code Coverage" />
                  <CheckBox fx:id="CreateReport" mnemonicParsing="false" text="Create Report" />
                  <Button mnemonicParsing="false" onAction="#commitPropertyChanges" text="Commit Changes" />
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
